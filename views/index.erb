<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Paradigm Shift Schedule Form</h1>
        <p>Use this form to update our teams schedule!</p>
      </div>
    </div>
    <div class="row form paradigm">
      <div class="col-md-4 col-sm-4">
        <% if defined? error_message %>
          <p class="bg-danger"><%= error_message %></p>
        <% end %>
        <form action="/" method="POST">
          <div class="form-group">
		  	<label for="date">Date *</label>
			<input type="date" class="form-control" name="date" id="date"/>
          </div>
          <div class="form-group">
            <label for="type">Event Type *</label>
			<select name="type" class="form-control" id="type">
				<option value="none">Please select</option>
				<option value="Scrim">Scrim</option>
				<option value="Match">Match</option>
				<option value="Vod Review">Vod Review</option>
			</select>	
          </div>
          <div class="form-group">
            <label for="name">Team/Coach Name *</label>
			<input type="text" class="form-control" name="name" id="name" placeholder="Paradigm Shift"/>
          </div>
		  <div class="form-group">
		  	<label for="time">Time *</label>
			<input type="text" class="form-control" name="time" id="time" placeholder="8:00PM - 10:00PM"/>
		  </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
